<%- include('../includes/header.ejs') %> <%- include('../includes/nav.ejs') %>

<div class="bg-primary" id="layoutAuthentication" style="padding-top:50px; padding-bottom:50px;">
  <div id="layoutAuthentication_content">
    <main>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
              <div class="card-header">
                <h3 class="text-center font-weight-light my-4">
                <b>CLASS ATTENDANCE CHECKING</b>
                </h3>
              </div>
              <div class="card-body">
                <% if(errMessage) { %>
                <div><%= errMessage %></div>
                <% } %>
                <form action="/login" method="POST">
                  <div class="form-group">
                    <label class="small mb-1" for="logemail">อีเมล</label>
                    <input
                      type="email"
                      id="logemail"
                      name="logemail"
                      class="form-control py-4 <% if (errFields.errEmail) { %>is-invalid<% } %>"
                      required="required"
                      value="<%= oldInput.logemail %>"
                      placeholder="อีเมล"
                    />
                    <div class="invalid-feedback">
                      <%= errFields.errEmail %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="small mb-1" for="logpassword">รหัสผ่าน</label>
                    <input
                      type="password"
                      id="logpassword"
                      name="logpassword"
                      class="form-control py-4 <% if (errFields.errPassword) { %>is-invalid<% } %>" 
                      required="required"
                      placeholder="รหัสผ่าน"
                    />
                    <div class="invalid-feedback">
                      <%= errFields.errPassword %>
                    </div>
                  </div>
                  <div
                    class="form-group d-flex align-items-center justify-content-between mt-4 mb-0 "
                  >
                    <input
                      type="hidden"
                      name="_csrf"
                      value="<%= csrfToken %>"
                    />
                    <input
                      type="submit"
                      class="btn btn-primary btn-block"
                      value="เข้าสู่ระบบ"
                    />
                  </div>
                </form>
              </div>
              <div class="card-footer text-center">
                <div class="small">
                  <a href="/register">ยังไม่มีข้อมูล? สมัครสมาชิก!</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('../includes/footer.ejs') %>
